@using MVcProject.ViewModel;
@model emps_LIstOfDepartmentVM
<form action="@Url.Action("EditEmployeeSave", "Employee")" method="post" enctype="multipart/form-data">
   <input type="hidden" name="Id" value="@Model.Id" />
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Name</label>
      <input type="text" class="form-control" id="inputEmail4" placeholder="Full Name" name="Name" value="@Model?.Name">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Salary</label>
      <input type="number" class="form-control" id="inputPassword4" placeholder="Salary" name="Salary" value="@Model?.Salary">
    </div>
  </div>

  <div class="form-group">
    <label for="inputAddress">Address</label>
    <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" name="Address" value="@Model?.Address">
  </div>

  <div class="form-group">
    <label for="inputImage">Profile Image</label>
    <input type="file" name="formFile" accept="image/*" class="form-control" id="inputImage">
  </div>
  <div class="form-group">
    <label for="inputAddress2">Job Title</label>
    <input type="text" class="form-control" id="inputAddress2" placeholder="Job Title" name="JobTitle" value="@Model?.JobTitle">
  </div>

  <div class="form-group col-md-4">
    <label for="inputState">Department</label>
    <select id="inputState" class="form-control" name="DepartmentId">
            @for (int i = 0; i < Model.DepartmentList.Count; i++)
            {
                        <option  value="@Model.DepartmentList[i].Id" >@Model.DepartmentList[i].Name</option>
            }

    </select>
  </div>

  <button type="submit" class="btn btn-primary">Edit Employee</button>
</form>
