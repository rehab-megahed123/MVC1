@using MVcProject.ViewModel
@model emps_LIstOfDepartmentVM

<form  action="@Url.Action("AddEmployeeSave", "Employee")" method="post" enctype="multipart/form-data">
  <div class="form-row">
    <div class="form-group col-md-6">
      @Html.LabelFor(e=>e.Name)
      
          @Html.TextBoxFor(e => e.Name, new { @class = "form-control", placeholder="Full Name" })
    </div>
    <div class="form-group col-md-6">
      <label asp-for="Salary"></label>
      <input asp-for="Salary" class="form-control"  placeholder="Salary" >
    </div>
  </div>
  
  <div class="form-group">
    <label for="inputAddress">Address</label>
    <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" name="Address" value="@Model?.Address">
  </div>
  
  <div class="form-group">
    <label for="inputImage">Profile Image</label>
    <input src="@Model.ImageUrl" type="file" name="formFile" accept="image/*" class="form-control" id="inputImage">
  </div>
  <div class="form-group">
    <label for="inputAddress2">Job Title</label>
    <input type="text" class="form-control" id="inputAddress2" placeholder="Job Title" name="JobTitle" value="@Model?.JobTitle">
  </div>
  
  <div class="form-group col-md-4">
    <label for="inputState">Department</label>
    <select  class="form-control" asp-for="DepartmentId" asp-items="@Model.DeptOptions">
            
                    <option value="0" > Select Department</option>
            

    </select>
  </div>

  <button type="submit" class="btn btn-primary">Add Employee</button>
</form>
