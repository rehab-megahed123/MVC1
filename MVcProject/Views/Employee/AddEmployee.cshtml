@using MVcProject.ViewModel
@model emps_LIstOfDepartmentVM

<form  action="@Url.Action("AddEmployeeSave", "Employee")" method="post" enctype="multipart/form-data">
  <div class="form-row">
    <div class="form-group col-md-6">
      @Html.LabelFor(e=>e.Name)
      
          @Html.TextBoxFor(e => e.Name, new { @class = "form-control", placeholder="Full Name" })
          <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
      <label asp-for="Salary"></label>
      <input asp-for="Salary" class="form-control"  placeholder="Salary" >
      <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
  </div>
  
  <div class="form-group">
    <label for="inputAddress">Address</label>
    <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" name="Address" value="@Model?.Address">
    <span asp-validation-for="Address" class="text-danger"></span>
  </div>
  
  <div class="form-group">
    <label for="inputImage">Profile Image</label>
    <input value="@Model.formFile" type="file" name="formFile" accept="image/*" class="form-control" id="inputImage">
    <span asp-validation-for="formFile" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label for="inputAddress2">Job Title</label>
    <input type="text" class="form-control" id="inputAddress2" placeholder="Job Title" name="JobTitle" value="@Model?.JobTitle">
    <span asp-validation-for="JobTitle" class="text-danger"></span>
  </div>
  
  <div class="form-group col-md-4">
    <label for="inputState">Department</label>
    <select  class="form-control" asp-for="DepartmentId" asp-items="@Model.DeptOptions">
            
                    <option value="0" > Select Department</option>
            

    </select>
    <span asp-validation-for="DepartmentId" class="text-danger"></span>
  </div>

  <button type="submit" class="btn btn-primary">Add Employee</button>
</form>
@section Scripts{
   @*  <script src="~\lib\jquery\dist\jquery.min.js"></script> *@
    <script src="~\lib\jquery-validation\dist\jquery.validate.min.js"></script>
    <script src="~\lib\jquery-validation-unobtrusive\jquery.validate.unobtrusive.min.js"></script>
}
